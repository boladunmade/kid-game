      window.onload = function() {
        document.getElementById("first").onclick = function() {
          var yellow = document.getElementById("yellow").value;
          var color = "12";
          if (yellow == color) {
            swal("Kiddies Games says:", "YAAAAY, YOU GOT IT :)");
          } else {
            swal("Try again");
          }
        };

        document.getElementById("second").onclick = function() {
          var blue = document.getElementById("blue").value;
          var colo = "2";
          if (blue == colo) {
            swal("Kiddies Games says:", "YAAAAY, YOU ARE A GENIUS :)");
          } else {
            swal("Don't give up, just try again");
          }
        };

        document.getElementById("third").onclick = function() {
          var yellow = document.getElementById("pink").value;
          var color = "E";
          if (yellow == color) {
            swal("Kiddies Games says:", "YAAAAY, YOU ROCK BIGTIME");
          } else {
            swal("Awwww, just try once more");
          }
        };

        document.getElementById("fourth").onclick = function() {
          var yellow = document.getElementById("green").value;
          var color = "aeiou";
          if (yellow == color) {
            swal("Kiddies Games says:", "YAAAAY, YOU ARE SUPER SMART");
          } else {
            swal("Try again");
          }
        };

        document.getElementById("fifth").onclick = function() {
          var yellow = document.getElementById("brown").value;
          var color = "17";
          if (yellow == color) {
            swal("Kiddies Games says:", "YAAAAY, YOU ARE A STAR");
          } else {
            swal("Try again");
          }
        };

        document.getElementById("sixth").onclick = function() {
          var yellow = document.getElementById("black").value;
          var color = "lion";
          if (yellow == color) {
            swal("Kiddies Games says:", "YAAAAY, YOU GOT IT :)");
          } else {
            swal("Try again :(");
          }
        };
      };
